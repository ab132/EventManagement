@model EventManagement.ViewModels.PrivateGuestViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PrivateGuest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPrivateGuest" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger boldform"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label boldform"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonalIdentificationCode" class="control-label boldform
                       "></label>
                <input asp-for="PersonalIdentificationCode" class="form-control" />
                <span asp-validation-for="PersonalIdentificationCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentOption" class="control-label boldform"></label>
                <select asp-for="PaymentOption" class="form-control">
                    <option value="" class="control-label">@Model.PaymentOption</option>
                    @foreach (string payment in ViewBag.PaymentOptions)
                    {
                        <option value="@payment">@payment</option>
                    }
                </select>
                <span asp-validation-for="PaymentOption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalInfo" class="control-label boldform"></label>
                <input asp-for="AdditionalInfo" class="form-control" />
                <span asp-validation-for="AdditionalInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventId" class="control-label boldform"></label>
                <input asp-for="EventId" class="form-control" />
                <span asp-validation-for="EventId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="@Model.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Events">Back to List</a>
</div>

